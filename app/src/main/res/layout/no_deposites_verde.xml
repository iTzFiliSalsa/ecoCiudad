<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redondeado_blanco"
    android:padding="25dp">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/no_verde"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No deposites en el contenedor verde"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="#000"
        android:textSize="25dp"/>
    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp"
        android:background="#888"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bombillas"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#888"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Punto limpio."
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#888"
        android:layout_marginBottom="15dp"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Espejos, ceniceros, vasos o vajillas"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#888"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Punto limpio"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#888"
        android:layout_marginBottom="15dp"
        android:textSize="15dp"/>
</LinearLayout>