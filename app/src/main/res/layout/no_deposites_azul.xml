<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redondeado_blanco"
    android:padding="25dp">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/no_azul"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No deposites en el contenedor azul"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="#000"
        android:textSize="25dp"/>
    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp"
        android:background="#888"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Briks"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#888"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contenedor amarillo porque está compuesto no solo de cartón, sino también de plástico y aluminio."
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#888"
        android:layout_marginBottom="15dp"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Servilletas y papel de cocina usado"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#888"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contenedor de residuos orgánicos."
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginBottom="15dp"
        android:textColor="#888"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pañales y compresas"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#888"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contenedor de restos"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#888"
        android:textSize="15dp"/>
</LinearLayout>