<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/curva_verde"
    android:gravity="center_horizontal"
    tools:context=".Lugares.InformacionRioFrio">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/regresar"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/regresar_riofrio"
                    android:src="@drawable/ic_regresar"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/regresar"
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rio Frio"
                    android:fontFamily="@font/nunito_bold"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A continuaci贸n se muestra informaci贸n acerca del rio frio."
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunito_regular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/titulo"
                android:id="@+id/contenido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/curveado_blanco"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/perfil_popotes_verde"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rio Frio"
                            android:fontFamily="@font/nunito_bold"
                            android:textColor="#888"
                            android:textSize="25dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="El Rio frio es un rio en las afueras de ciudad Mante donde las personas pueden ir a disfrutar del agua."
                            android:textColor="#888"
                            android:textSize="12sp"
                            android:fontFamily="@font/nunito_regular"/>

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#eaeaea"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Se ubica en las afueras de ciudad Mante en la carretera Mante-Victoria."
                        android:textColor="#888"
                        android:textSize="12sp"
                        android:fontFamily="@font/nunito_regular"/>
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="10dp"
                        android:elevation="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="210dp"
                            android:src="@drawable/riofrio"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zona de contaminaci贸n nula"
                        android:textColor="#080"
                        android:fontFamily="@font/nunito_bold"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="El lugar presenta una contaminaci贸n nula, ya que habitantes de los alrededores, se preocupan por tener limpio el lugar."/>
                    <ImageView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/posicion_riofrio"
                        android:src="@drawable/maps"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>