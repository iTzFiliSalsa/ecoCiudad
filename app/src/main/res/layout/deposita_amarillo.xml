<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redondeado_blanco"
    android:padding="25dp">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ok_amarillo"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deposita en el contenedor amarillo"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="#000"
        android:textSize="25dp"/>
    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp"
        android:background="#888"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Botellas y envases de plástico"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#888"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Productos de higiene y limpieza, tarrinas, bandejas, envoltorios y bolsas. botellas con tapas y tapones"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#888"
        android:layout_marginBottom="15dp"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Envases metálicos"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#888"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Latas, bandejas de aluminio, aerosoles, botes de desodorante, tapas y tapones metálicos."
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginBottom="15dp"
        android:textColor="#888"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Briks"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#888"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="de leche, zumos, sopas, etc."
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#888"
        android:textSize="15dp"/>
</LinearLayout>