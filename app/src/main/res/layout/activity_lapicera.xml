<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/curva_abajo_verde"
    android:gravity="center_horizontal"
    tools:context=".articulos.Lapicera">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/regresar"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/regresar_lapiceras"
                    android:layout_marginTop="15dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_regresar_gris"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/regresar"
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lapiceras"
                    android:fontFamily="@font/nunito_bold"
                    android:textAlignment="center"
                    android:textColor="#888"
                    android:textSize="30dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deja de tirar tus latas y crea una lapicera hecha de lata"
                    android:textColor="#888"
                    android:fontFamily="@font/nunito_regular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/titulo"
                android:id="@+id/contenido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curveado_blanco"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/lapicera_1" />
                    <TextView
                        android:padding="10dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Crea creativas lapiceras hechas de lata"
                        android:textAlignment="center"
                        android:textColor="#888"
                        android:textSize="24sp"
                        android:fontFamily="@font/nunito_bold"/>
                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:text="Las latas es un envase de metal que sirve para ayudar que los alimentos se mantengan en buen estado. Después que utilizamos el alimento tendemos a desecharlas a la basura porque crees que ya no tienen uso. Cuando en realidad los puedes usar en muchas cosas, desde un hacer un macetero, florero hasta un lapicero. Sí, leíste bien una lapicera."
                        android:textColor="#888"
                        android:textSize="12sp"
                        android:fontFamily="@font/nunito_regular"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/pasos"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:text="El procedimiento es tan facil, lo unico que necesitas son unas tijeras y mucha imaginación. Empieza cortando la lata por la mitad para despues adornarla a tu gusto, ¡recuerda quitarle el filo al corte de la lata para evitar accidentes!."
                        android:textColor="#888"
                        android:textSize="12sp"
                        android:fontFamily="@font/nunito_regular"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/pasos_2"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_below="@+id/contenido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>