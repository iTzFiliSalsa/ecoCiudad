<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
   <!-- <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ok_amarillo"
        android:layout_marginBottom="15dp"/>-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crea diferentes diseños de macetas"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="#000"
                    android:textSize="25dp"/>
                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="15dp"
                    android:background="#888"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¡A continuación se muestras diferentes ideas para que puedas reciclar tus botellas!"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="#888"
                    android:layout_marginBottom="15dp"
                    android:textSize="15dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/maceta_1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puedes usar tus botellas, cortarlas por la mitad, llenarlas de tierra ¡y sembrar tu planta!"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="15dp"
                    android:textColor="#888"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¡Adornalas aún mas!"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_marginBottom="15dp"
                    android:textColor="#888"
                    android:textSize="18dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/macetero_1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puedes empezar por cortarlas a la mitad y empezarlas a pintar con un poco de pintura."
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="15dp"
                    android:textColor="#888"
                    android:textSize="15dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:src="@drawable/macetero_2"
                    android:layout_marginBottom="15dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Y este seria el resultado final."
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="15dp"
                    android:textColor="#888"
                    android:textSize="15dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</LinearLayout>