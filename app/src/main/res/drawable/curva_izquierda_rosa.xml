<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/soft_gray"/>
    <item
        android:bottom="500dp"
        android:left="0dp"
        android:right="0dp"
        android:top="-200dp"
        >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="@color/white" />
            <corners
                android:bottomLeftRadius="700dp"
                android:bottomRightRadius="3000dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <gradient
                android:startColor="#fea793"
                android:endColor="#ff3158"
                android:angle="90"/>
        </shape>
    </item>
</layer-list>
